<p id="notice"><%= notice %></p>

<div class="card" style="width: 18rem;">
  <% if @visitor.photo.attached?  %>
    <%= image_tag(@visitor.photo, class: "card-img-top") %>
  <% else %>
    <img class="card-img-top" src="/cat.jpg" alt="">
  <% end %>
</div>
<p>
  <strong>Description:</strong>
  <%= @visitor.description %>
</p>

<p>
  <strong>Cpf:</strong>
  <%= @visitor.cpf %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @visitor.genre %>
</p>

<p>
  <strong>Telephone:</strong>
  <%= @visitor.telephone %>
</p>

<%= link_to 'Edit', edit_visitor_path(@visitor) %> |
<%= link_to 'Back', visitors_path %>
